<div id="calendar"></div>

<% content_for(:after_js) do %>
  <script>
    $('#calendar').fullCalendar({
      themeSystem: "bootstrap3",
      allDaySlot: false,
      defaultView: "agendaWeek",
      minTime: "09:00:00",
      maxTime: "18:00:00",
      header: {
            left: '',
            center: 'prev title next',
            right: 'agendaWeek,agendaDay today'
        },
        events: '/admin/bookings.json',
    });
  </script>
<% end %>
