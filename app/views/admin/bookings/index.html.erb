<div class="calendar-container">

  <div id="calendar" style="background-color:white; padding-top:20px; padding-left:10px; padding-rigth:10px;"></div>
  <div class="status-bar"> </div>
</div>




<% content_for(:after_js) do %>
  <script>
    $('#calendar').fullCalendar({
      allDaySlot: false,
      defaultView: "agendaWeek",
      minTime: "09:00:00",
      maxTime: "18:00:00",
      header: {
            left: '',
            center: 'prev title next',
            right: 'agendaWeek,agendaDay today'
        },
        events: '/admin/bookings.json',
    });
  </script>
<% end %>
