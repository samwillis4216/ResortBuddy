<div class="show-page-header" >
  <div class="calendar-header">
    <div class="top-line-show">
      <h1 style="text-align: left;">Week overview<br><small style="color: black;">Get a quick glance at all your activities bookings</small></h1>
    </div>
  </div>
</div>

<div class="calendar-container">
  <div id="calendar" style="background-color:white; padding: 40px 50px 0;"></div>
  <div class="status-bar" style="margin-top: 20px;">
    <ul>
      <li><p><i class="fa fa-circle" id="no-bookings"></i> No bookings</p> </li>
      <li><p><i class="fa fa-circle" id="bookings"></i> Bookings</p> </li>
      <li><p><i class="fa fa-circle" id="fully-booked"></i> Fully Booked</p> </li>
    </ul>
  </div>
</div>






<% content_for(:after_js) do %>
  <script>
    $('#calendar').fullCalendar({
      themeSystem: "bootstrap3",
      allDaySlot: false,
      firstDay: 1,
      defaultView: "agendaWeek",
      minTime: "09:00:00",
      maxTime: "18:00:00",
      header: {
            left: '',
            center: 'prev title next',
            right: 'agendaWeek,agendaDay'
        },
        events: '/admin/my_activities2.json',
    });
  </script>
<% end %>
