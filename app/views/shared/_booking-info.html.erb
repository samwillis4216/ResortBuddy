<% img = @booking.availability.activity.photo? ? @booking.availability.activity.photo : 'iyq4gxp0oltwleiwafrx6' %>
<% instrimg = @booking.availability.employee.photo? ? @booking.availability.employee.photo.url(:bright_face) : "jsut0cgif0nnmpalnwpn" %>
<div class="booking-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path img %>'); width: 100%; height: 200px;">
  <div class="booking-content">
  </div>
</div>

<div class="container samcontainer">
  <div class="row sam-row">
    <div class="samitem" id="name"><h4 class="sam-name"><%= @booking.availability.activity.name.capitalize%></h4></div>
    <div class="samitem" id="location"><h4 class="sam-location"><%= @booking.availability.activity.location.capitalize%></h4></div>
    <div class="Location-icon" style="float:right; margin-top: 14px;"> <%= cl_image_tag 'placeholder_akrtrs', :width=>20, :height=>20, :crop=>:fit  %></div>
  </div>
  <hr style="margin-top: 8px !important; border-color: #d3d7dd !important; margin-left: 5px; margin-right: 5px; margin-bottom: 8px !important;">

  <div class="container sam-innercontainer">
    <h6 class="sam-subheadings">Details</h6>
    <p class="sam-description-booking">
      <i class="fa fa-calendar-check-o fa-fw" aria-hidden="true"></i>
      <%= @booking.availability.start_time.strftime("%A, %d %b %Y") %>
    </p>
    <p class="sam-description-booking">
      <i class="fa fa-clock-o fa-fw" aria-hidden="true"></i>
      <%= @booking.availability.start_time.strftime("%I:%M %p") %>
    </p>
    <p class="sam-description-booking">
      <i class="fa fa-usd fa-fw" aria-hidden="true"></i>
      <%= @booking.availability.activity.price * @booking.no_ppl %>
    </p>
    <p class="sam-description-booking">
      <i class="fa fa-user fa-fw" aria-hidden="true"></i>
      <%= @booking.no_ppl%>
    </p>
    <hr style="margin-top: 10px !important; border-color: #d3d7dd !important; margin-left: 1px; margin-right: 1px;">
    <h6 class="sam-subheadings">Location</h6>
    <div id="map" style="margin-bottom: 20px; height: 200px; width: 100%; background-image: url('<%= cl_image_path 'shandrani-map2_qltdro'%>'); background-size: cover;"><div class="location-icon-map" style="padding-top: 108px; padding-left: 87px;"><%= cl_image_tag 'placeholder_akrtrs', :width=>25, :height=>30, :crop=>:fit %></div></div>
    <hr style="margin-top: 10px !important; border-color: #d3d7dd !important; margin-left: 1px; margin-right: 1px;">
    <h6 class="sam-subheadings">Instructor</h6>
    <div class="instr-details">
      <%= cl_image_tag instrimg, class: "avatar-booking" %>
      <p class="sam-description-booking">
        <%= @booking.availability.employee.first_name.capitalize %> <%= @booking.availability.employee.last_name.capitalize %> <br> <%= @booking.availability.employee.role.capitalize %>
      </p>
    </div>
    <hr style="margin-top: 10px !important; border-color: #d3d7dd !important; margin-left: 1px; margin-right: 1px;">
  </div>
</div>
