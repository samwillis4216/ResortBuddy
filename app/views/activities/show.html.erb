<% img = @activity.photo? ? @activity.photo : 'iyq4gxp0oltwleiwafrx6' %>
<div class="booking-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path img %>');">
  <div class="booking-content">
  </div>
</div>
<div class="container samcontainer">
  <div class="row sam-row">
    <div class="samitem" id="name"><h4 class="sam-name"><%= @activity.name.capitalize%></h4></div>
    <div class="samitem" id="location"><h4 class="sam-location"><%= @activity.location.capitalize%></h4></div>
  </div>
  <hr style="margin-top: 10px !important; border-color: #d3d7dd !important; margin-left: 5px; margin-right: 5px;">
  <div class="container sam-innercontainer">
    <h6 class="sam-subheadings">Brief introduction to <%= @activity.category %></h6>
    <p class="sam-description"><%= @activity.description %></p>
    <hr style="margin-top: 10px !important; border-color: #d3d7dd !important; margin-left: 1px; margin-right: 1px;">
    <h6 class="sam-subheadings">Location</h6>
    <div id="map" style="height: 500px;"> </div>
  </div>
</div>

<%= render "shared/booking_form" %>
