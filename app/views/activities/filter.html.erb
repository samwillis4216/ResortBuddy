      const priceSlider = document.getElementById('price');
      const priceSliderVal = document.getElementById('priceSliderVal')
      var checkBx = document.getElementById('free')
      if (checkBx.checked) {
        console.log(priceSlider.value)
        $("#price").slider("disable");
        priceSlider.value = 0
