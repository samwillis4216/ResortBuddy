<div class="background-details">
<div class="container samcontainer">
<%= image_tag("logo.png", size: "50x50") %>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.file_field :photo, class: 'form-control transparent-input file' %>
        <%= f.hidden_field :photo_cache, class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.email_field :email, placeholder: "email", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="actions">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <%= f.button 'Sign Up', class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% end %>
</div>
</div>
<div class="background-photos"></div>
