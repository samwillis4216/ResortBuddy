<div class="background-details">
  <div class="container samcontainer">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="text-center">
          <h3 class="sam-top-title-name"><b>Resort Runner</b></h3>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-sm-12 col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group has-warning">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                  <div class="icon"> <i class="material-icons sam-icon">person</i>
                  </div>
                  <div class="user-input"> <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control sam-form-control form-control-warning' %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                    <div class="icon"> <i class="material-icons sam-icon">person</i>
                    </div>
                    <div class="user-input">
                      <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control sam-form-control' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                  <div class="icon"> <i class="material-icons sam-icon">email</i>
                  </div>
                  <div class="user-input">
                  <%= f.email_field :email, placeholder: "Email", class: 'form-control sam-form-control', id: "email" %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                  <div class="icon"> <i class="fa fa-key sam-icon" aria-hidden="true"></i>
                  </div>
                  <div class="user-input">
                    <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: 'form-control sam-form-control' %>
                  </div>
                  <br/>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                    <div class="icon"><i class="fa fa-key sam-icon" aria-hidden="true"></i>
                    </div>
                    <div class="user-input">
                      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off", class: 'form-control sam-form-control' %>
                    </div>
                </div>
              </div>
            </div>
          </div>

          <div class="actions">
            <div class="row">
              <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <div class="field">
                <%= f.button 'Sign Up', class: 'btn btn-primary sam-sign-up', id: 'signup' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="background-photos"></div>

<script>
  const email = document.getElementById("email");
  email.addEventListener("blur", valid_email);
  let flag = false;

  //function is not stopping
  function valid_email() {
    const pattern = /\S+@\S+\.\S+/;
    const ans = pattern.test(email.value);
    if ( ans === true) {
        email.classList.remove("form-control-warning");
    }
    else {
       email.classList.add("form-control-warning");
       //javascript is smart enough to know not to add the same class twice even if you input an invalid email, remove it, and input another invlaid email
    }
  }

</script>
