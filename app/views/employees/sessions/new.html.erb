
<div class="background2" style="height: 100vh;">
<div class="top">
<h2>Log in</h2>
<p>Employee</p>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :email, class: 'form-add' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-change' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
       <%= f.label :password, class: 'form-add' %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-change'%>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <% if devise_mapping.rememberable? -%>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-add' %>
      </div>
    </div>
  </div>
</div>


<div class="actions">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% end %>
<% end %>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <%= render "devise/shared/links" %>
      </div>
</div>
</div>
</div>
