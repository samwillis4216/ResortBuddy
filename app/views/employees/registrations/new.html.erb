<div class="background" style="height: 100vh;">
<h2 class="header">Create Account</h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :photo %><br />
        <%= f.file_field :photo, class: 'form-control transparent-input' %>
        <%= f.hidden_field :photo_cache, class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control transparent-input' %>
      </div>
    </div>
  </div>
</div>

<div class="actions">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% end %>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <%= render "devise/shared/links" %>
      </div>
</div>
